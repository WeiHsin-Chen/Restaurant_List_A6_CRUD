<div class="creation">
  <form action="/restaurants" method="POST">
    <div class="createrestaurant">
      <input type="text" placeholder="餐廳名稱" name="name">
      <input type="text" placeholder="餐廳英文名稱" name="name_en">
      <input type="text" placeholder="餐廳分類" name="category">
      <input type="text" placeholder="餐廳圖片(網址)" name="image">
      <input type="text" placeholder="餐廳地址" name="location">
      <input type="text" placeholder="餐廳電話" name="phone">
      <input type="text" placeholder="餐廳google地圖" name="google_map">
      <input type="text" placeholder="餐廳評分" name="rating">
      <input type="text" placeholder="餐廳簡介" name="description">
      <button type="submit">新增餐廳</button>
    </div>
  </form>
</div>